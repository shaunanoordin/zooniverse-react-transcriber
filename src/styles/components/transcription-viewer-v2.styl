.transcription-viewer-v2
  background: $secondary
  flex: 1 1 auto
  display: flex
  flex-direction: column
  align-items: stretch
  position: relative
  border: 1px solid $secondary
  
  .input-panel
    font-size: 0.8em
    position: absolute
    right: 0
    top: 0
    background: white
    padding: 0.5em
    margin: 0 auto
    width: 20em
    max-width: 100%
    border: 1px solid $tertiary
    text-align: center
    
    p
      margin: 0 0.2em
    
    .status-subpanel
      border-radius: 1em
      margin: 0.5em 0 0 0
      padding: 0.5em
      background: $primary
      color: $secondary
      
      button
        margin: 0 1em
  
  .control-panel
    border: 1px solid $tertiary
    font-size: 0.8em
    position: absolute
    left: 0
    top: 0
    background: white
    margin: 0 auto
    padding: 1em
    width: 20em
    max-width: 100%
    
    .row
      
      label
        display: inline-block
        width: 40%
      .data
        display: inline-block
        width: 60%
        
        input
          width: 50%
      
  .metadata-panel
    border: 1px solid $tertiary
    font-size: 0.8em
    position: absolute
    left: 0
    bottom: 0
    background: white
    margin: 0 auto
    padding: 1em
    width: 20em
    max-width: 100%
    
    .row
      border-top: 1px solid $secondary
      border-bottom: 1px solid $tertiary
      
      label
        display: inline-block
        color: $secondary
        background: $tertiary
        width: 25%
        height: 100%
        vertical-align: top
        overflow: hidden
        
      .data
        display: inline-block
        width: 75%
        height: 100%
        vertical-align: top
        overflow: auto

  .aggregation-panel
    border: 1px solid $tertiary
    font-size: 0.8em
    position: absolute
    right: 0
    bottom: 0
    background: white
    margin: 0 auto
    padding: 1em
    width: 20em
    max-width: 100%
    
    .aggregated
      background: $primary
      color: $secondary
      padding: 0.5em
    
    .raw
      color: $tertiary
      border-left: 1em solid $primary
      padding: 0.2em
      margin-top: 0.2em
