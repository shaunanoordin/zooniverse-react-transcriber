.transcription-viewer
  background: #fc3 //$secondary
  flex: 1 1 auto
  display: flex
  flex-direction: column
  align-items: stretch
  
  .metadata-panel
  .input-panel
    display: none
    
  .input-panel
    margin: 0 auto
    padding: 1em
    max-width: 40em
    border: 1px solid $tertiary
    text-align: center
    border-radius: 1em
    
    .status-subpanel
      border-radius: 1em
      margin: 0.5em 0 0 0
      padding: 0.5em
      background: $primary
      color: $secondary
      
  .metadata-panel
    margin: 0 auto
    padding: 1em
    border-collapse: collapse
    
    td
      padding: 0.5em
      vertical-align: top
    
    td:first-child
      color: $secondary
      background: $tertiary
      
