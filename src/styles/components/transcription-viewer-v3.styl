.transcription-viewer-v3
  background: $secondary
  flex: 1 1 auto
  display: flex
  flex-direction: row
  align-items: stretch
  position: relative
  
  .control-panel
    flex: 0 0 auto
    width: 16em
    font-size: 0.8em
    margin: 1px
    
    > div
      margin-top: 1em
      background: $primary
      color: $secondary
      border-radius: 1em
      padding: 0.5em
      
      .row
        display: flex
        margin-bottom: 0.1em
        
        label
          flex: 1 1 30%
          overflow: hidden
          padding: 0.2em
          
        .data
          flex: 1 1 70%
          overflow: auto
          padding: 0.2em
          
          input
            display: inline-block
            width: 100%
    
    .subjectID-subpanel
      text-align: center
      
      input
        display: inline-block
        width: 60%
      
      button
        display: inline-block
        width: 20%
    
    .status-subpanel
      text-align: center
      
      p
        margin: 0.2em 0
      
    .metadata-subpanel
      .data
        background: $secondary
        color: $tertiary
  
  .data-panel
    flex: 1 1 auto
    display: flex
    background: $quaternary
    margin: 0 3px
    flex-direction: row
    
    &.vertical
      flex-direction: column
    
    .data-subpanel
      border: 1px solid $primary
      margin: 3px
      flex: 1 1 auto
      display: flex
  
  .examination-panel
    flex: 0 0 auto
    width: 16em
    font-size: 0.8em
    margin: 1px
    overflow: auto
  
  .aggregation-panel
    border: 1px solid $tertiary
    font-size: 0.8em
    position: absolute
    right: 0
    bottom: 0
    background: white
    margin: 0 auto
    padding: 1em
    width: 20em
    max-width: 100%
    max-height: 20em
    overflow: auto
    
    .aggregated
      background: $primary
      color: $secondary
      padding: 0.5em
    
    .raw
      color: $tertiary
      border-left: 1em solid $primary
      padding: 0.2em
      margin-top: 0.2em
