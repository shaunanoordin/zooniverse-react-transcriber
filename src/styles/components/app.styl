.site-header
  color: $secondary
  background: $primary
  
  h1
    font-size: 1.2em
    margin: 0
    padding: 0

  .title
    display: inline-block
    padding: 0

  .link
    display: inline-block
    margin: 0.5em
    padding: 0.5em
    color: #fff
    text-decoration: none
    border-radius: 0.5em
    &.active,
    &:hover
      background-color: $tertiary

.content-section
  padding: 0
