.painter
  margin: 2em
  border: 1px solid $tertiary
  background: $secondary
  position: relative
  
  > canvas
    display: block
    position: relative
    width: 100%
    touch-action: none  //Prevents IE/Edge from intrepreting touch input as scroll/pan commands.
  
  .subject
    background: $tertiary
    
  .classifier
    position: absolute
    top: 0
    left: 0
    background: rgba(255, 255, 255, 0.5)
    opacity: 0.8
