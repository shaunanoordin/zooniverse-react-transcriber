.transcription-viewer-v1
  margin: 1em
  padding: 1em
  border: 1px solid $tertiary
  background: $secondary
  
  h2
    text-align: center

  .input-panel
    margin: 0 auto
    padding: 1em
    max-width: 40em
    border: 1px solid $tertiary
    text-align: center
    border-radius: 1em
    
    .status-subpanel
      border-radius: 1em
      margin: 0.5em 0 0 0
      padding: 0.5em
      background: $primary
      color: $secondary
    
  .viewer-panel
    border-radius: 1em
    margin: 1em auto
    padding: 1em
    border: 1px solid $tertiary
    overflow: auto
    
    .control-subpanel
      margin: 1em auto
      
  .metadata-panel
    margin: 0 auto
    padding: 1em
    border-collapse: collapse
    
    td
      padding: 0.5em
      vertical-align: top
    
    td:first-child
      color: $secondary
      background: $tertiary
      
